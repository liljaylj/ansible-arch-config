# vim: ft=toml
#:schema https://json.schemastore.org/traefik-v2.json

[providers.file]
filename = "/etc/traefik/dynamic-config.toml"

[providers.docker]
endpoint = "unix:///var/run/docker.sock"
exposedByDefault = false
defaultRule = "Host(`{{'{{'}} normalize .Name }}.test`)"
watch = true

[api]
dashboard = true

[entryPoints.web]
address = "127.0.0.1:5413"
forwardedHeaders.trustedIPs = ["127.0.0.1/32", "::1/128"]
